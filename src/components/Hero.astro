---
interface Props {
  title: string;
  subtitle?: string;
  imageUrl?: string;
  ctaText?: string;
  ctaLink?: string;
}

const {
  title,
  subtitle,
  imageUrl = '/images/hero-default.jpg',
  ctaText,
  ctaLink
} = Astro.props;
---

<section class="relative bg-blue-900 text-white py-20 md:py-32">
  {imageUrl && (
    <div class="absolute inset-0 bg-black opacity-50"></div>
  )}
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6">
        {title}
      </h1>
      {subtitle && (
        <p class="text-xl md:text-2xl mb-8 text-gray-200">
          {subtitle}
        </p>
      )}
      {ctaText && ctaLink && (
        <a
          href={ctaLink}
          class="inline-block bg-white text-blue-900 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition transform hover:scale-105"
        >
          {ctaText}
        </a>
      )}
    </div>
  </div>
</section>
