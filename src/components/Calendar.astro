---
import type { EventOccurrence } from '../lib/directus';

interface Props {
  occurrences: EventOccurrence[];
  title?: string;
}

const { occurrences, title = 'Upcoming Events' } = Astro.props;

// Occurrences are already sorted and filtered by expandRecurringEventsSync
// Just limit to first 10 for sidebar display
const displayOccurrences = occurrences.slice(0, 10);

const formatTime = (date: Date) => {
  return date.toLocaleTimeString('en-GB', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
  });
};

const getDayOfWeek = (date: Date) => {
  return date.toLocaleDateString('en-GB', { weekday: 'short' });
};
---

<div class="bg-white rounded-lg shadow-md p-6">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">{title}</h2>

  {displayOccurrences.length === 0 ? (
    <p class="text-gray-600 text-center py-8">No upcoming events at this time.</p>
  ) : (
    <div class="space-y-4">
      {displayOccurrences.map((occurrence) => (
        <div class="flex gap-4 pb-4 border-b border-gray-200 last:border-b-0 last:pb-0">
          <div class="flex-shrink-0 text-center">
            <div class="w-16 h-16 bg-blue-100 rounded-lg flex flex-col items-center justify-center">
              <div class="text-xs text-blue-700 uppercase font-medium">
                {getDayOfWeek(occurrence.occurrence_date)}
              </div>
              <div class="text-2xl font-bold text-blue-900">
                {occurrence.occurrence_date.getDate()}
              </div>
            </div>
          </div>

          <div class="flex-grow min-w-0">
            <h3 class="font-semibold text-gray-900 mb-1 truncate">
              <a href={`/events/${occurrence.event.id}`} class="hover:text-blue-700 transition">
                {occurrence.event.title}
              </a>
            </h3>

            {occurrence.event.is_recurring && (
              <div class="flex items-center gap-1 text-xs text-blue-600 mb-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                <span>Recurring</span>
              </div>
            )}

            <div class="flex items-center gap-2 text-sm text-gray-600 mb-1">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{formatTime(occurrence.occurrence_date)}</span>
            </div>

            <div class="flex items-center gap-2 text-sm text-gray-600">
              <svg class="w-4 h-4 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="truncate">{occurrence.event.location}</span>
            </div>
          </div>
        </div>
      ))}
    </div>
  )}

  <div class="mt-6 text-center">
    <a
      href="/events"
      class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium"
    >
      View All Events
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </a>
  </div>
</div>
