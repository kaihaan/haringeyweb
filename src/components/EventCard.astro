---
import type { EventOccurrence } from '../lib/directus';
import { formatRecurrencePattern } from '../lib/recurrence';

interface Props {
  occurrence: EventOccurrence;
}

const { occurrence } = Astro.props;
const { event, occurrence_date } = occurrence;

const formatTime = (date: Date) => {
  return date.toLocaleTimeString('en-GB', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
    timeZone: 'Europe/London',
  });
};

// Calculate end time
const startDate = occurrence_date;
const templateStart = new Date(event.start_datetime);
const templateEnd = new Date(event.end_datetime);
const durationMs = templateEnd.getTime() - templateStart.getTime();
const endDate = new Date(startDate.getTime() + durationMs);

const recurrenceText = formatRecurrencePattern(event);
---

<article class="bg-white rounded-lg shadow-md hover:shadow-lg transition p-6">
  <div class="flex items-start gap-4">
    <div class="flex-shrink-0 bg-blue-100 rounded-lg p-3 text-center min-w-[70px]">
      <div class="text-2xl font-bold text-blue-900">
        {startDate.getDate()}
      </div>
      <div class="text-sm text-blue-700 uppercase">
        {startDate.toLocaleDateString('en-GB', { month: 'short', timeZone: 'Europe/London' })}
      </div>
    </div>

    <div class="flex-grow">
      <div class="flex items-start justify-between mb-2">
        <h3 class="text-xl font-bold text-gray-900">
          <a href={`/events/${event.id}`} class="hover:text-blue-700 transition">
            {event.title}
          </a>
        </h3>
        {event.is_recurring && (
          <div class="flex items-center gap-1 text-xs text-blue-600 bg-blue-50 px-2 py-1 rounded-full">
            <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            <span>Recurring</span>
          </div>
        )}
      </div>

      {event.is_recurring && recurrenceText && (
        <div class="flex items-center gap-2 text-sm text-blue-700 mb-2 font-medium">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <span>{recurrenceText}</span>
        </div>
      )}

      <div class="flex items-center gap-2 text-sm text-gray-600 mb-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span><strong>Next:</strong> {occurrence.display_date}</span>
      </div>

      <div class="flex items-center gap-2 text-sm text-gray-600 mb-3">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>{event.location}</span>
      </div>

      <p class="text-gray-700 mb-4">{event.description}</p>

      {event.category && (
        <span class="inline-block bg-gray-100 text-gray-700 text-xs px-3 py-1 rounded-full mb-4">
          {event.category}
        </span>
      )}

      <div class="flex items-center gap-3">
        <a
          href={`/events/${event.id}`}
          class="text-blue-600 hover:text-blue-800 font-medium text-sm"
        >
          Learn More â†’
        </a>
        {event.registration_link && (
          <a
            href={event.registration_link}
            target="_blank"
            rel="noopener noreferrer"
            class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded text-sm font-medium transition"
          >
            Register
          </a>
        )}
      </div>
    </div>
  </div>
</article>
