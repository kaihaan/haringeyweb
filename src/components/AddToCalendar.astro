---
import type { EventOccurrence } from '../lib/directus';
import {
  generateGoogleCalendarUrl,
  generateOutlookUrl,
  generateIcsContent,
  generateFilename,
} from '../lib/calendar';

interface Props {
  occurrence: EventOccurrence;
  class?: string;
}

const { occurrence, class: className = '' } = Astro.props;

const googleUrl = generateGoogleCalendarUrl(occurrence);
const outlookUrl = generateOutlookUrl(occurrence);
const icsContent = generateIcsContent(occurrence);
const filename = generateFilename(occurrence.event.title);

// Encode ICS content for data URI
const icsDataUri = `data:text/calendar;charset=utf-8,${encodeURIComponent(icsContent)}`;
---

<div class={`dropdown dropdown-end ${className}`}>
  <label tabindex="0" class="btn btn-sm btn-ghost gap-1 text-primary hover:bg-primary/10">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>
    <span class="hidden sm:inline">Add to Calendar</span>
    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
    </svg>
  </label>
  <ul tabindex="0" class="dropdown-content z-[100] menu p-2 shadow-lg bg-base-100 rounded-box w-52 border border-base-300">
    <li>
      <a
        href={googleUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
        </svg>
        Google Calendar
      </a>
    </li>
    <li>
      <a
        href={outlookUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
        </svg>
        Outlook
      </a>
    </li>
    <li>
      <a
        href={icsDataUri}
        download={filename}
        class="flex items-center gap-2"
      >
        <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
          <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 18H6V4h2v8l2.5-1.5L13 12V4h5v16z"/>
        </svg>
        Apple / Download .ics
      </a>
    </li>
  </ul>
</div>
