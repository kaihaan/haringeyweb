---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Hero from '../../../components/Hero.astro';
import PrayerCard from '../../../components/PrayerCard.astro';
import { getPublishedItems } from '../../../lib/directus';
import type { Prayer } from '../../../lib/directus';

// Get all published prayers from Directus
const prayers = await getPublishedItems<Prayer>('prayers');
---

<BaseLayout title="Prayers" description="Browse prayers from the Baháʼí writings for various occasions and needs.">
  <Hero
    title="Prayers"
    subtitle="Sacred prayers from the Baháʼí writings"
  />

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4 mb-8">
          <button class="bg-blue-600 text-white px-4 py-2 rounded-lg font-medium">
            All Prayers
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Morning
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Assistance
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Healing
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Children
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Unity
          </button>
        </div>

        <div class="grid md:grid-cols-2 gap-6">
          {prayers.map((prayer) => (
            <PrayerCard prayer={prayer} />
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
