---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import PrayerCard from '../../../components/PrayerCard.astro';
import { getPublishedItems, getPrayerSnippet } from '../../../lib/directus';
import type { Prayer } from '../../../lib/directus';

export async function getStaticPaths() {
  const allPrayers = await getPublishedItems<Prayer>('prayers');

  return allPrayers.map((prayer) => ({
    params: { id: prayer.id },
    props: {
      prayer,
      allPrayers
    },
  }));
}

const { prayer, allPrayers } = Astro.props;

// Get related prayers (same category, excluding current prayer)
const relatedPrayers = allPrayers
  .filter(p => p.category === prayer.category && p.id !== prayer.id)
  .slice(0, 2);

// Use snippet from prayer text as the display title
const displayTitle = getPrayerSnippet(prayer.text, 8);
---

<BaseLayout title={`${displayTitle} - Prayers`} description={`Prayer by ${prayer.author}`}>
  <section class="py-12 bg-gradient-to-b from-primary/5 to-base-100">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="mb-6">
          <a href="/devotional/prayers" class="text-accent-cyan hover:text-accent-cyan-dark font-medium inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Prayers
          </a>
        </div>

        <div class="bg-base-200 rounded-lg shadow-lg p-8 md:p-12 mb-8">
          <div class="mb-6">
            <span class="inline-block bg-primary/10 text-primary text-sm px-3 py-1 rounded mb-4">
              {prayer.category}
            </span>
            <h1 class="text-4xl font-bold text-base-content mb-3">{displayTitle}</h1>
            <p class="text-xl text-base-content opacity-70">â€” {prayer.author}</p>
          </div>

          <div class="border-t border-b border-base-300 py-8 my-8">
            <div class="text-base-content opacity-90 italic leading-relaxed text-lg whitespace-pre-line">
              {prayer.text}
            </div>
          </div>

          {prayer.tags && prayer.tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {prayer.tags.map((tag) => (
                <span class="text-sm text-base-content opacity-70 bg-base-300 px-3 py-1 rounded">
                  #{tag}
                </span>
              ))}
            </div>
          )}

          <div class="flex gap-4">
            <button
              onclick="window.print()"
              class="flex items-center gap-2 bg-base-300 hover:bg-base-200 text-base-content px-4 py-2 rounded-lg font-medium transition"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
              </svg>
              Print
            </button>
          </div>
        </div>

        {relatedPrayers.length > 0 && (
          <div>
            <h2 class="text-2xl font-bold text-base-content mb-6">Related Prayers</h2>
            <div class="grid md:grid-cols-2 gap-6">
              {relatedPrayers.map((relatedPrayer) => (
                <PrayerCard prayer={relatedPrayer} />
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  @media print {
    header, footer, .no-print {
      display: none;
    }
  }
</style>
