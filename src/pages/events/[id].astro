---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AddToCalendar from '../../components/AddToCalendar.astro';
import { getPublishedItems, type Event, type EventOccurrence } from '../../lib/directus';
import { getNextOccurrences, formatEventDate, formatRecurrencePattern } from '../../lib/recurrence';

export async function getStaticPaths() {
  const events = await getPublishedItems<Event>('events');
  return events.map((event) => ({
    params: { id: event.id },
    props: { event },
  }));
}

interface Props {
  event: Event;
}

const { event } = Astro.props;

// Get next occurrence for this event
const now = new Date();
let occurrence_date: Date;
let display_date: string;

if (event.is_recurring) {
  const occurrences = getNextOccurrences(event, 1, now);
  occurrence_date = occurrences[0] || new Date(event.start_datetime);
  display_date = formatEventDate(occurrence_date);
} else {
  occurrence_date = new Date(event.start_datetime);
  display_date = formatEventDate(occurrence_date);
}

// Create EventOccurrence for AddToCalendar component
const occurrence: EventOccurrence = {
  event,
  occurrence_date,
  display_date,
};

// Calculate end time
const templateStart = new Date(event.start_datetime);
const templateEnd = new Date(event.end_datetime);
const durationMs = templateEnd.getTime() - templateStart.getTime();
const durationMinutes = Math.round(durationMs / (1000 * 60));
const endDate = new Date(occurrence_date.getTime() + durationMs);

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-GB', {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    timeZone: 'Europe/London',
  });
};

const formatTime = (date: Date) => {
  return date.toLocaleTimeString('en-GB', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
    timeZone: 'Europe/London',
  });
};

const recurrenceText = formatRecurrencePattern(event);
---

<BaseLayout title={`${event.title} - Events`} description={event.description}>
  <section class="py-12 bg-gradient-to-b from-primary/5 to-base-100">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <div class="mb-6">
          <a href="/events" class="text-primary hover:text-primary/80 font-medium inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Events
          </a>
        </div>

        <div class="bg-base-200 rounded-lg shadow-lg p-8 mb-8">
          <div class="flex items-start gap-4 mb-6">
            <div class="flex-shrink-0 bg-primary/10 rounded-lg p-4 text-center">
              <div class="text-3xl font-bold text-primary">
                {occurrence_date.getDate()}
              </div>
              <div class="text-sm text-primary uppercase">
                {occurrence_date.toLocaleDateString('en-GB', { month: 'short', timeZone: 'Europe/London' })}
              </div>
            </div>

            <div class="flex-grow">
              <div class="flex items-start justify-between mb-2">
                <h1 class="text-4xl font-bold text-base-content">{event.title}</h1>
                {event.is_recurring && (
                  <div class="flex items-center gap-1 text-xs text-primary bg-primary/5 px-2 py-1 rounded-full">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                    <span>Recurring</span>
                  </div>
                )}
              </div>

              {event.is_recurring && recurrenceText && (
                <div class="flex items-center gap-2 text-sm text-primary mb-3 font-medium">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{recurrenceText}</span>
                </div>
              )}

              <div class="flex flex-wrap gap-4 text-base-content">
                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span><strong>Next:</strong> {formatDate(occurrence_date)}</span>
                </div>

                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span>{formatTime(occurrence_date)} - {formatTime(endDate)}</span>
                </div>

                <div class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <span>{event.location}</span>
                </div>
              </div>
            </div>
          </div>

          <div class="border-t border-base-300 pt-6 mb-6">
            <h2 class="text-2xl font-bold text-base-content mb-4">About This Event</h2>
            <p class="text-base-content leading-relaxed text-lg">{event.description}</p>
          </div>

          <div class="border-t border-base-300 pt-6 mb-6">
            <h2 class="text-2xl font-bold text-base-content mb-4">Details</h2>
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
              {event.category && (
                <div>
                  <dt class="text-sm font-medium text-text-secondary mb-1">Event Type</dt>
                  <dd class="text-base-content">{event.category}</dd>
                </div>
              )}
              <div>
                <dt class="text-sm font-medium text-base-content/50 mb-1">Open to Public</dt>
                <dd class="text-base-content">{event.is_public ? 'Yes' : 'Members Only'}</dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-base-content/50 mb-1">Location</dt>
                <dd class="text-base-content">{event.location}</dd>
              </div>
              <div>
                <dt class="text-sm font-medium text-base-content/50 mb-1">Duration</dt>
                <dd class="text-base-content">{durationMinutes} minutes</dd>
              </div>
            </dl>
          </div>

          <div class="border-t border-base-300 pt-6 flex flex-wrap gap-4 items-center">
            <AddToCalendar occurrence={occurrence} class="flex-shrink-0" />
            {event.registration_link && (
              <a
                href={event.registration_link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block bg-primary hover:bg-primary/80 text-primary-content px-8 py-3 rounded-lg font-semibold transition"
              >
                Register for This Event
              </a>
            )}
          </div>
        </div>

        <div class="bg-primary/10 rounded-lg p-6 border border-primary/20">
          <h3 class="text-lg font-bold text-base-content mb-3">Have Questions?</h3>
          <p class="text-base-content/70 mb-4">
            If you have any questions about this event or would like more information, please don't hesitate to contact us.
          </p>
          <a href="/contact" class="inline-block bg-primary hover:bg-primary/80 text-primary-content px-6 py-3 rounded-lg font-medium transition">
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
