---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import EventCard from '../components/EventCard.astro';
import Calendar from '../components/Calendar.astro';
import { getPublishedItems, expandRecurringEventsSync } from '../lib/directus';
import { getNextOccurrences, formatEventDate } from '../lib/recurrence';
import type { Event } from '../lib/directus';

// Get all published events from Directus
const events = await getPublishedItems<Event>('events');

// Expand recurring events to show next 5 occurrences each
const eventOccurrences = expandRecurringEventsSync(events, getNextOccurrences, formatEventDate, 5);
---

<BaseLayout title="Events" description="Join us for devotional gatherings, study circles, children's classes, and community events.">
  <Hero
    title="Community Events"
    subtitle="Join us for devotional gatherings, study circles, and community activities"
    imageUrl="/images/bahai/buildings/houses-of-worship/north-america/north-america-001.jpg"
    overlayOpacity={60}
  />

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Upcoming Events</h2>
          <div class="space-y-6">
            {eventOccurrences.map((occurrence) => (
              <EventCard occurrence={occurrence} />
            ))}
          </div>

          {eventOccurrences.length === 0 && (
            <div class="bg-base-200 rounded-lg shadow-md p-12 text-center">
              <svg class="w-16 h-16 text-base-content opacity-40 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <h3 class="text-xl font-bold text-base-content mb-2">No Upcoming Events</h3>
              <p class="text-base-content opacity-70 mb-6">Check back soon for new events, or contact us to learn about ongoing activities.</p>
              <a href="/contact" class="inline-block bg-primary hover:bg-accent-cyan-dark text-white px-6 py-3 rounded-lg font-medium transition">
                Contact Us
              </a>
            </div>
          )}
        </div>

        <div>
          <Calendar occurrences={eventOccurrences} title="Event Calendar" />

          <div class="bg-white rounded-lg shadow-md p-6 mt-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Event Types</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-2 text-gray-700">
                <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                <span>Devotional Gatherings</span>
              </li>
              <li class="flex items-center gap-2 text-gray-700">
                <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                <span>Study Circles</span>
              </li>
              <li class="flex items-center gap-2 text-gray-700">
                <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
                <span>Children's Classes</span>
              </li>
              <li class="flex items-center gap-2 text-gray-700">
                <div class="w-3 h-3 bg-purple-500 rounded-full"></div>
                <span>Junior Youth Programs</span>
              </li>
              <li class="flex items-center gap-2 text-gray-700">
                <div class="w-3 h-3 bg-red-500 rounded-full"></div>
                <span>Community Events</span>
              </li>
            </ul>
          </div>

          <div class="bg-blue-50 rounded-lg p-6 border border-blue-200 mt-8">
            <h3 class="text-lg font-bold text-gray-900 mb-3">Stay Updated</h3>
            <p class="text-gray-700 text-sm mb-4">
              Want to receive updates about upcoming events? Get in touch with us.
            </p>
            <a href="/contact" class="inline-block bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg font-medium transition w-full text-center">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
