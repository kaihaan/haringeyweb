---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
// import EventCard from '../components/EventCard.astro';
// import Calendar from '../components/Calendar.astro';
// import { getPublishedItems, expandRecurringEventsSync } from '../lib/directus';
// import { getNextOccurrences, formatEventDate } from '../lib/recurrence';
// import type { Event } from '../lib/directus';

// --- TEMPORARY: Directus event fetching commented out for Ayyam-i-Ha flyer ---
// const events = await getPublishedItems<Event>('events');
// const eventOccurrences = expandRecurringEventsSync(events, getNextOccurrences, formatEventDate, 5);
---

<BaseLayout title="Events" description="Join us for devotional gatherings, study circles, children's classes, and community events.">
  <Hero
    title="Community Events"
    subtitle="Join us for devotional gatherings, study circles, and community activities"
    imageUrl="/images/bahai/buildings/houses-of-worship/north-america/north-america-001.jpg"
    overlayOpacity={60}
  />

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">

          <!-- Ayyam-i-Ha Flyer (temporary replacement for event listing) -->
          <div class="flex flex-col items-center">
            <img
              src="/images/ayyamiha-2026.png"
              alt="Ayyam-i-Ha Celebration — 28 February 2026, 3pm to 5pm at Jackson's Lane, Highgate"
              class="rounded-2xl shadow-lg w-full max-w-2xl"
            />
            <div class="mt-6 text-center max-w-xl">
              <h2 class="text-2xl font-bold text-base-content mb-2">Ayyam-i-Ha Celebration</h2>
              <p class="text-lg text-base-content/80 mb-1">28 February 2026 &middot; 3 pm – 5 pm</p>
              <p class="text-base-content/70 mb-4">Jackson's Lane, Highgate</p>
              <a href="/contact" class="btn btn-primary">RSVP / Questions</a>
            </div>
          </div>

          <!-- ORIGINAL EVENT LISTING — uncomment to restore
          <h2 class="text-3xl font-bold text-base-content mb-6">Upcoming Events</h2>
          <div class="space-y-6">
            {eventOccurrences.map((occurrence) => (
              <EventCard occurrence={occurrence} />
            ))}
          </div>

          {eventOccurrences.length === 0 && (
            <div class="bg-base-200 rounded-lg shadow-md p-12 text-center">
              <svg class="w-16 h-16 text-base-content opacity-40 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <h3 class="text-xl font-bold text-base-content mb-2">No Upcoming Events</h3>
              <p class="text-text-secondary mb-6">Check back soon for new events, or contact us to learn about ongoing activities.</p>
              <a href="/contact" class="inline-block bg-primary hover:bg-primary/80 text-primary-content px-6 py-3 rounded-lg font-medium transition">
                Contact Us
              </a>
            </div>
          )}
          END ORIGINAL EVENT LISTING -->

        </div>

        <div>
          <!-- Calendar commented out — depends on eventOccurrences
          <Calendar occurrences={eventOccurrences} title="Event Calendar" />
          -->

          <div class="bg-base-100 rounded-lg shadow-md p-6">
            <h3 class="text-xl font-bold text-base-content mb-4">Event Types</h3>
            <ul class="space-y-3">
              <li class="flex items-center gap-2 text-base-content/70">
                <div class="w-3 h-3 bg-primary rounded-full"></div>
                <span>Devotional Gatherings</span>
              </li>
              <li class="flex items-center gap-2 text-base-content/70">
                <div class="w-3 h-3 bg-success rounded-full"></div>
                <span>Study Circles</span>
              </li>
              <li class="flex items-center gap-2 text-base-content/70">
                <div class="w-3 h-3 bg-warning rounded-full"></div>
                <span>Children's Classes</span>
              </li>
              <li class="flex items-center gap-2 text-base-content/70">
                <div class="w-3 h-3 bg-secondary rounded-full"></div>
                <span>Junior Youth Programs</span>
              </li>
              <li class="flex items-center gap-2 text-base-content/70">
                <div class="w-3 h-3 bg-error rounded-full"></div>
                <span>Community Events</span>
              </li>
            </ul>
          </div>

          <div class="bg-primary/10 rounded-lg p-6 border border-primary/20 mt-8">
            <h3 class="text-lg font-bold text-base-content mb-3">Subscribe to Events</h3>
            <p class="text-base-content/70 text-sm mb-4">
              Add all community events to your calendar and stay updated.
            </p>
            <div class="dropdown dropdown-end w-full">
              <label tabindex="0" class="btn btn-primary w-full gap-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Subscribe to All Events
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </label>
              <ul tabindex="0" class="dropdown-content z-[100] menu p-2 shadow-lg bg-base-100 rounded-box w-full border border-base-300">
                <li>
                  <a
                    href={`https://calendar.google.com/calendar/render?cid=${encodeURIComponent('webcal://haringeyweb.vercel.app/events.ics')}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex items-center gap-2"
                  >
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>
                    </svg>
                    Google Calendar
                  </a>
                </li>
                <li>
                  <a
                    href="/events.ics"
                    download="haringey-bahai-events.ics"
                    class="flex items-center gap-2"
                  >
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 18H6V4h2v8l2.5-1.5L13 12V4h5v16z"/>
                    </svg>
                    Download .ics File
                  </a>
                </li>
                <li>
                  <button
                    id="copy-calendar-url"
                    class="flex items-center gap-2 w-full"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
                    </svg>
                    <span id="copy-text">Copy Calendar URL</span>
                  </button>
                </li>
              </ul>
            </div>
          </div>

          <div class="bg-base-200 rounded-lg p-6 mt-4">
            <h3 class="text-lg font-bold text-base-content mb-3">Questions?</h3>
            <p class="text-base-content/70 text-sm mb-4">
              Want to learn more about our events? Get in touch with us.
            </p>
            <a href="/contact" class="inline-block bg-base-300 hover:bg-base-100 text-base-content px-4 py-2 rounded-lg font-medium transition w-full text-center">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <script>
    const copyBtn = document.getElementById('copy-calendar-url');
    const copyText = document.getElementById('copy-text');

    copyBtn?.addEventListener('click', async () => {
      const calendarUrl = 'https://haringeyweb.vercel.app/events.ics';
      try {
        await navigator.clipboard.writeText(calendarUrl);
        if (copyText) {
          copyText.textContent = 'Copied!';
          setTimeout(() => {
            copyText.textContent = 'Copy Calendar URL';
          }, 2000);
        }
      } catch (err) {
        console.error('Failed to copy:', err);
      }
    });
  </script>
</BaseLayout>
