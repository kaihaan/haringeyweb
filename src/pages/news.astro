---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';

const newsArticles = [
  {
    id: '1',
    title: 'Community Celebrates Bicentenary of the Birth of the Báb',
    date: '2024-10-28',
    excerpt: 'Our community joined Baháʼís around the world in celebrating the 200th anniversary of the birth of the Báb, the Herald of the Baháʼí Faith.',
    image: '/images/news-1.jpg',
    category: 'Celebrations',
  },
  {
    id: '2',
    title: 'New Study Circle Session Begins',
    date: '2024-10-15',
    excerpt: 'A new session of Ruhi Book 1 study circle is starting this month. All are welcome to join and explore spiritual concepts together.',
    image: '/images/news-2.jpg',
    category: 'Education',
  },
  {
    id: '3',
    title: 'Youth Service Project: Community Garden Initiative',
    date: '2024-10-01',
    excerpt: 'Local youth have launched a community garden project, bringing neighbors together to cultivate both plants and friendships.',
    image: '/images/news-3.jpg',
    category: 'Service',
  },
  {
    id: '4',
    title: 'Interfaith Dialogue on Climate Action',
    date: '2024-09-20',
    excerpt: 'Representatives from various faith communities gathered to discuss spiritual perspectives on environmental stewardship and climate action.',
    image: '/images/news-4.jpg',
    category: 'Interfaith',
  },
];
---

<BaseLayout title="News & Updates" description="Stay informed about community news, events, and stories from the Baháʼí community.">
  <Hero
    title="News & Updates"
    subtitle="Stories and updates from our community"
  />

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <button class="bg-blue-600 text-white px-4 py-2 rounded-lg font-medium">
            All News
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Celebrations
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Service Projects
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Education
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Interfaith
          </button>
          <button class="bg-white hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg font-medium border border-gray-300">
            Community Life
          </button>
        </div>

        <div class="grid gap-8">
          {newsArticles.map((article) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
              <div class="md:flex">
                <div class="md:w-1/3 bg-gray-200 flex items-center justify-center p-8">
                  <svg class="w-20 h-20 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
                <div class="md:w-2/3 p-6">
                  <div class="flex items-center gap-3 mb-3">
                    <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded">
                      {article.category}
                    </span>
                    <span class="text-sm text-gray-500">
                      {new Date(article.date).toLocaleDateString('en-US', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                      })}
                    </span>
                  </div>
                  <h3 class="text-2xl font-bold text-gray-900 mb-3">
                    <a href={`/news/${article.id}`} class="hover:text-blue-700 transition">
                      {article.title}
                    </a>
                  </h3>
                  <p class="text-gray-700 mb-4 leading-relaxed">
                    {article.excerpt}
                  </p>
                  <a href={`/news/${article.id}`} class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center gap-1">
                    Read More
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>

        {newsArticles.length === 0 && (
          <div class="bg-white rounded-lg shadow-md p-12 text-center">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <h3 class="text-xl font-bold text-gray-900 mb-2">No News Articles Yet</h3>
            <p class="text-gray-600">Check back soon for updates from our community.</p>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>
