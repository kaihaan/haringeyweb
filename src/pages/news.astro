---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import { getPublishedItems, getAssetUrl } from '../lib/directus';
import type { NewsArticle } from '../lib/directus';

// Fetch news articles from Directus (with error handling)
let newsArticles: NewsArticle[] = [];
try {
  newsArticles = await getPublishedItems<NewsArticle>('news');
  // Sort by date descending (newest first)
  newsArticles.sort((a, b) => new Date(b.date).getTime() - new Date(a.date).getTime());
} catch (error) {
  console.warn('Could not fetch news articles:', error);
  // newsArticles remains empty array, page will show "No News Articles Yet" message
}
---

<BaseLayout title="News & Updates" description="Stay informed about community news, events, and stories from the Baháʼí community.">
  <Hero
    title="News & Updates"
    subtitle="Stories and updates from our community"
  />

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
          <button class="bg-primary text-white px-4 py-2 rounded-lg font-medium">
            All News
          </button>
          <button class="bg-base-200 hover:bg-base-300 text-base-content px-4 py-2 rounded-lg font-medium border border-base-300">
            Celebrations
          </button>
          <button class="bg-base-200 hover:bg-base-300 text-base-content px-4 py-2 rounded-lg font-medium border border-base-300">
            Service Projects
          </button>
          <button class="bg-base-200 hover:bg-base-300 text-base-content px-4 py-2 rounded-lg font-medium border border-base-300">
            Education
          </button>
          <button class="bg-base-200 hover:bg-base-300 text-base-content px-4 py-2 rounded-lg font-medium border border-base-300">
            Interfaith
          </button>
          <button class="bg-base-200 hover:bg-base-300 text-base-content px-4 py-2 rounded-lg font-medium border border-base-300">
            Community Life
          </button>
        </div>

        <div class="grid gap-8">
          {newsArticles.map((article) => {
            const imageUrl = article.image ? getAssetUrl(article.image) : null;
            return (
              <article class="bg-base-200 rounded-lg shadow-md overflow-hidden hover:shadow-lg transition">
                <div class="md:flex">
                  <div class="md:w-1/3 bg-base-200 flex items-center justify-center p-8">
                    {imageUrl ? (
                      <img src={imageUrl} alt={article.title} class="w-full h-full object-cover" />
                    ) : (
                      <svg class="w-20 h-20 text-base-content opacity-40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                      </svg>
                    )}
                  </div>
                  <div class="md:w-2/3 p-6">
                    <div class="flex items-center gap-3 mb-3">
                      <span class="inline-block bg-primary/10 text-primary text-xs px-2 py-1 rounded">
                        {article.category}
                      </span>
                      <span class="text-sm text-base-content opacity-70">
                        {new Date(article.date).toLocaleDateString('en-US', {
                          year: 'numeric',
                          month: 'long',
                          day: 'numeric'
                        })}
                      </span>
                    </div>
                    <h3 class="text-2xl font-bold text-base-content mb-3">
                      <a href={`/news/${article.slug}`} class="hover:text-accent-cyan-dark transition">
                        {article.title}
                      </a>
                    </h3>
                    <p class="text-base-content opacity-90 mb-4 leading-relaxed">
                      {article.excerpt}
                    </p>
                    <a href={`/news/${article.slug}`} class="text-accent-cyan hover:text-accent-cyan-dark font-medium inline-flex items-center gap-1">
                      Read More
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>

        {newsArticles.length === 0 && (
          <div class="bg-base-200 rounded-lg shadow-md p-12 text-center">
            <svg class="w-16 h-16 text-base-content opacity-40 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <h3 class="text-xl font-bold text-base-content mb-2">No News Articles Yet</h3>
            <p class="text-base-content opacity-70">Check back soon for updates from our community.</p>
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>
