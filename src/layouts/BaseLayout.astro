---
import "../styles/global.css";
import ThemeDrawer from "../components/ThemeDrawer";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Haringey Baháʼí Community Website" } =
  Astro.props;
---

<!doctype html>
<html lang="en" data-theme="zen-garden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Commissioner:wght@400;500;700&display=swap" rel="stylesheet" />
    <script is:inline>
      // Set theme before page renders to avoid flash
      const savedTheme = localStorage.getItem("theme");
      const validThemes = ['light', 'dark', 'zen-garden', 'zen-garden-dark', 'serene-ocean', 'serene-ocean-dark', 'tranquil-dawn', 'tranquil-dawn-dark'];
      const theme = validThemes.includes(savedTheme) ? savedTheme : "zen-garden";
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-base-100">
    <header
      id="main-header"
      class="sticky top-0 z-50 bg-base-200 shadow-sm transition-transform duration-300 ease-in-out"
    >
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-base-content"
            >Haringey Baháʼí Community</a
          >
          <div class="flex items-center gap-4">
            <ul class="hidden md:flex space-x-6">
              <li>
                <a
                  href="/"
                  class="text-base-content hover:text-primary transition"
                  >Home</a>
              </li>
              <li>
                <a
                  href="/about"
                  class="text-base-content hover:text-primary transition"
                  >About</a>
              </li>
              <li>
                <a
                  href="/study"
                  class="text-base-content hover:text-primary transition"
                  >Study</a>
              </li>
              <li>
                <a
                  href="/devotional"
                  class="text-base-content hover:text-primary transition"
                  >Pray</a>
              </li>
              <li>
                <a
                  href="/events"
                  class="text-base-content hover:text-primary transition"
                  >Events</a>
              </li>
              <li>
                <a
                  href="/contact"
                  class="text-base-content hover:text-primary transition"
                  >Contact</a>
              </li>
            </ul>
            <ThemeDrawer client:load />
            <button
              id="mobile-menu-button"
              class="md:hidden text-base-content"
              aria-label="Toggle menu"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
      </nav>

      <!-- Mobile Menu -->
      <div
        id="mobile-menu"
        class="hidden md:hidden bg-base-200 border-t border-base-300"
      >
        <div class="container mx-auto px-4 py-4">
          <ul class="space-y-3 text-right">
            <li>
              <a
                href="/"
                class="block text-base-content hover:text-primary py-2 transition"
                >Home</a>
            </li>
            <li>
              <a
                href="/about"
                class="block text-base-content hover:text-primary py-2 transition"
                >About</a>
            </li>
            <li>
              <a
                href="/study"
                class="block text-base-content hover:text-primary py-2 transition"
                >Study</a>
            </li>
            <li>
              <a
                href="/devotional"
                class="block text-base-content hover:text-primary py-2 transition"
                >Pray</a>
            </li>
            <li>
              <a
                href="/events"
                class="block text-base-content hover:text-primary py-2 transition"
                >Events</a>
            </li>
            <li>
              <a
                href="/contact"
                class="block text-base-content hover:text-primary py-2 transition"
                >Contact</a>
            </li>
          </ul>
        </div>
      </div>
    </header>

    <!-- Theme drawer portal target -->
    <div id="theme-drawer-root"></div>

    <main class="flex-grow container mx-auto px-4 py-8">
      <slot />
    </main>

    <footer class="bg-footer-bg text-footer-text py-8 mt-auto">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-bold mb-4">About Us</h3>
            <p class="opacity-80 text-sm">
              The Baháʼí Faith is a religion that teaches the essential worth of
              all religions and the unity of all people.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4">Quick Links</h3>
            <ul class="space-y-2 text-sm">
              <li>
                <a
                  href="/about"
                  class="opacity-80 hover:opacity-100 hover:text-primary transition"
                  >About the Faith</a>
              </li>
              <li>
                <a
                  href="/history"
                  class="opacity-80 hover:opacity-100 hover:text-primary transition"
                  >History</a>
              </li>
              <li>
                <a
                  href="/community"
                  class="opacity-80 hover:opacity-100 hover:text-primary transition"
                  >Community Life</a>
              </li>
              <li>
                <a
                  href="/events"
                  class="opacity-80 hover:opacity-100 hover:text-primary transition"
                  >Events</a>
              </li>
              <li>
                <a
                  href="/contact"
                  class="opacity-80 hover:opacity-100 hover:text-primary transition"
                  >Contact Us</a>
              </li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4">Connect</h3>
            <p class="opacity-80 text-sm mb-2">
              Join us for devotional gatherings, study circles, and community
              events.
            </p>
            <a
              href="/contact"
              class="inline-block bg-primary hover:bg-primary/80 text-white px-4 py-2 rounded transition text-sm"
            >
              Get in Touch
            </a>
          </div>
        </div>
        <div
          class="mt-8 pt-8 border-t border-footer-text/20 text-center text-sm opacity-80"
        >
          <p>
            &copy; {new Date().getFullYear()} Haringey Baháʼí Community. All rights
            reserved.
          </p>
        </div>
      </div>
    </footer>

    <script>
      // Mobile menu toggle
      const mobileMenuButton = document.getElementById("mobile-menu-button");
      const mobileMenu = document.getElementById("mobile-menu");

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });

        // Close menu when a link is clicked
        const mobileMenuLinks = mobileMenu.querySelectorAll("a");
        mobileMenuLinks.forEach((link) => {
          link.addEventListener("click", () => {
            mobileMenu.classList.add("hidden");
          });
        });
      }

      // Auto-hide navbar on scroll
      const header = document.getElementById("main-header");
      let lastScrollY = window.scrollY;
      let scrollTimeout = null;

      const showHeader = () => {
        header.style.transform = "translateY(0)";
      };

      const hideHeader = () => {
        header.style.transform = "translateY(-100%)";
      };

      const handleScroll = () => {
        const currentScrollY = window.scrollY;

        // Clear existing timeout
        if (scrollTimeout) {
          clearTimeout(scrollTimeout);
        }

        // Always show at top of page
        if (currentScrollY < 50) {
          showHeader();
          lastScrollY = currentScrollY;
          return;
        }

        // Scrolling down - hide
        if (currentScrollY > lastScrollY) {
          hideHeader();
        }
        // Scrolling up - show
        else if (currentScrollY < lastScrollY) {
          showHeader();
        }

        // Set timeout to show header after 2s of no scrolling
        scrollTimeout = setTimeout(showHeader, 2000);

        lastScrollY = currentScrollY;
      };

      window.addEventListener("scroll", handleScroll, { passive: true });
    </script>
  </body>
</html>
